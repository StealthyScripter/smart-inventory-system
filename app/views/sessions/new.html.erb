<% content_for :page_title, "Log In" %>

<div class="table-container" style="max-width: 500px; margin: 2rem auto;">
  <div class="table-header">
    <h3 class="table-title">Log In</h3>
  </div>

  <div style="padding: 2rem;">
    <%= form_with url: login_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-input", required: true, autofocus: true %>
      </div>

      <div class="form-group">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-input", required: true %>
      </div>

      <div style="margin-top: 2rem;">
        <%= form.submit "Log In", class: "btn btn-primary", style: "width: 100%;" %>
      </div>

      <div style="margin-top: 1rem; text-align: center;">
        <p style="color: #718096;">Don't have an account? <%= link_to "Sign up", signup_path %></p>
      </div>
    <% end %>
  </div>
</div>
