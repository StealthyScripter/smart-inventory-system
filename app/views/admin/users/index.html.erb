<% content_for :page_title, "User Management" %>

<div class="table-container">
  <div class="table-header">
    <h3 class="table-title">User Management</h3>
  </div>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td>
            <span class="badge badge-<%= user.admin? || user.manager? ? 'success' : user.supervisor? ? 'info' : user.employee? ? 'warning' : 'secondary' %>">
              <%= user.role.titleize %>
            </span>
          </td>
          <td><%= user.location&.name || "Not assigned" %></td>
          <td>
            <%= link_to "Edit Role", edit_admin_user_path(user), class: "btn btn-secondary", style: "padding: 0.25rem 0.5rem; font-size: 0.875rem;" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
