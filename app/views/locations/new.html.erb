<% content_for :page_title, "Add New Location" %>

<div class="table-container">
  <div class="table-header">
    <h3 class="table-title">Add New Location</h3>
    <%= link_to "Back to Locations", locations_path, class: "btn btn-secondary" %>
  </div>

  <div style="padding: 2rem;">
    <%= form_with model: @location, local: true do |form| %>
      <% if @location.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</strong>
          <ul style="margin-top: 0.5rem;">
            <% @location.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-input", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :address, class: "form-label" %>
        <%= form.text_area :address, rows: 3, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :manager_id, "Manager", class: "form-label" %>
        <%= form.select :manager_id, options_from_collection_for_select(@users, :id, :full_name, @location.manager_id),
                       { prompt: "Select a manager..." }, { class: "form-select" } %>
      </div>

      <div style="margin-top: 2rem; display: flex; gap: 1rem;">
        <%= form.submit "Create Location", class: "btn btn-primary" %>
        <%= link_to "Cancel", locations_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
