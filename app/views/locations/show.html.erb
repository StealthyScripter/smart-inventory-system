<% content_for :page_title, @location.name %>

<div class="table-container">
  <div class="table-header">
    <h3 class="table-title">Location Details</h3>
    <%= link_to "Back to Locations", locations_path, class: "btn btn-secondary" %>
  </div>
  <div style="padding: 1.5rem;">
    <div class="grid-2">
      <div>
        <h4>Location Information</h4>
        <p><strong>Name:</strong> <%= @location.name %></p>
        <p><strong>Address:</strong> <%= @location.address %></p>
        <p><strong>Manager:</strong> <%= @location.manager&.full_name || "Unassigned" %></p>
      </div>
      <div>
        <h4>Inventory Summary</h4>
        <p><strong>Total Items:</strong> <%= @location.stock_levels.sum(:current_quantity) %></p>
        <p><strong>Unique Products:</strong> <%= @location.stock_levels.count %></p>
      </div>
    </div>
  </div>
</div>