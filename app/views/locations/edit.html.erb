<% content_for :page_title, "Edit Location" %>

<div class="table-container">
  <div class="table-header">
    <h3 class="table-title">Edit Location: <%= @location.name %></h3>
    <div style="display: flex; gap: 1rem;">
      <%= link_to "View Location", @location, class: "btn btn-secondary" %>
      <%= link_to "Back to Locations", locations_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div style="padding: 2rem;">
    <%= form_with model: @location, local: true do |form| %>
      <% if @location.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</strong>
          <ul style="margin-top: 0.5rem;">
            <% @location.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-input", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :address, class: "form-label" %>
        <%= form.text_area :address, rows: 3, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :manager_id, "Manager", class: "form-label" %>
        <%= form.select :manager_id, options_from_collection_for_select(@users, :id, :full_name, @location.manager_id),
                       { prompt: "Select a manager..." }, { class: "form-select" } %>
      </div>

      <div style="margin-top: 2rem; display: flex; gap: 1rem;">
        <%= form.submit "Update Location", class: "btn btn-primary" %>
        <%= link_to "Cancel", @location, class: "btn btn-secondary" %>
        <%= button_to "Delete Location", @location,
                      method: :delete,
                      form: { data: { turbo_confirm: "Are you sure?" } },
                      class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
