<% content_for :page_title, "Edit Product" %>

<div class="table-container">
  <div class="table-header">
    <h3 class="table-title">Edit Product: <%= @product.name %></h3>
    <div style="display: flex; gap: 1rem;">
      <%= link_to "View Product", @product, class: "btn btn-secondary" %>
      <%= link_to "Back to Products", products_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div style="padding: 2rem;">
    <%= form_with model: @product, local: true do |form| %>
      <% if @product.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</strong>
          <ul style="margin-top: 0.5rem;">
            <% @product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid-2" style="gap: 2rem;">
        <div>
          <h4 style="margin-bottom: 1rem;">Basic Information</h4>

          <div class="form-group">
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, class: "form-input", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :sku, "SKU", class: "form-label" %>
            <%= form.text_field :sku, class: "form-input", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, rows: 3, class: "form-input" %>
          </div>

          <div class="form-group">
            <%= form.label :category_id, "Category", class: "form-label" %>
            <%= form.select :category_id, options_from_collection_for_select(@categories, :id, :name, @product.category_id),
                           { prompt: "Select a category..." }, { class: "form-select", required: true } %>
          </div>

          <div class="form-group">
            <%= form.label :supplier_id, "Supplier", class: "form-label" %>
            <%= form.select :supplier_id, options_from_collection_for_select(@suppliers, :id, :name, @product.supplier_id),
                           { prompt: "Select a supplier..." }, { class: "form-select" } %>
          </div>
        </div>

        <div>
          <h4 style="margin-bottom: 1rem;">Pricing & Inventory</h4>

          <div class="form-group">
            <%= form.label :unit_cost, "Unit Cost ($)", class: "form-label" %>
            <%= form.number_field :unit_cost, step: 0.01, min: 0, class: "form-input" %>
          </div>

          <div class="form-group">
            <%= form.label :selling_price, "Selling Price ($)", class: "form-label" %>
            <%= form.number_field :selling_price, step: 0.01, min: 0, class: "form-input" %>
          </div>

          <div class="form-group">
            <%= form.label :reorder_point, "Reorder Point", class: "form-label" %>
            <%= form.number_field :reorder_point, min: 1, class: "form-input", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :lead_time_days, "Lead Time (Days)", class: "form-label" %>
            <%= form.number_field :lead_time_days, min: 1, class: "form-input", required: true %>
          </div>
        </div>
      </div>

      <!-- Stock Levels Section -->
      <div style="margin-top: 2rem;">
        <h4 style="margin-bottom: 1rem; display: flex; align-items: center; gap: 0.5rem;">
          üì¶ Stock Levels by Location
          <span style="font-size: 0.875rem; font-weight: normal; color: #718096;">
            (Adjust quantities as needed)
          </span>
        </h4>

        <div style="background: #f7fafc; padding: 1.5rem; border-radius: 0.5rem; border: 1px solid #e2e8f0;">
          <div class="grid-2" style="gap: 1.5rem;">
            <% @locations.each do |location| %>
              <% stock_level = @stock_levels[location.id] %>
              <div class="form-group" style="margin-bottom: 0;">
                <label class="form-label" style="display: flex; justify-content: space-between; align-items: center;">
                  <span>
                    <strong><%= location.name %></strong>
                    <% if stock_level %>
                      <span style="font-size: 0.875rem; color: #718096; font-weight: normal;">
                        (Current: <%= stock_level.current_quantity %>)
                      </span>
                    <% end %>
                  </span>
                </label>
                <%= number_field_tag "stock_levels[#{location.id}]",
                                     stock_level&.current_quantity || 0,
                                     min: 0,
                                     class: "form-input",
                                     style: "font-weight: 600;" %>
              </div>
            <% end %>
          </div>

          <div class="alert alert-warning" style="margin-top: 1rem; margin-bottom: 0;">
            <strong>‚ö†Ô∏è Note:</strong> Changing stock quantities will create stock movement records for audit purposes.
          </div>
        </div>
      </div>

      <div style="margin-top: 2rem; display: flex; gap: 1rem;">
        <%= form.submit "Update Product", class: "btn btn-primary" %>
        <%= link_to "Cancel", @product, class: "btn btn-secondary" %>
        <%= button_to "Delete Product", @product,
                      method: :delete,
                      form: { data: { turbo_confirm: "Are you sure? This will delete all stock levels and cannot be undone." } },
                      class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .form-input[type="number"] {
    text-align: right;
  }
</style>