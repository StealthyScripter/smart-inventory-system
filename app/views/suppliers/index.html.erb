<% content_for :page_title, "Suppliers" %>

<div class="table-container">
  <div class="table-header">
    <h3 class="table-title">Suppliers</h3>
    <%= link_to "Add Supplier", "#", class: "btn btn-primary" %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Contact Email</th>
        <th>Phone</th>
        <th>Lead Time</th>
        <th>Active Orders</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= link_to supplier.name, supplier_path(supplier) %></td>
          <td><%= supplier.contact_email %></td>
          <td><%= supplier.contact_phone %></td>
          <td><%= supplier.default_lead_time_days %> days</td>
          <td><%= supplier.purchase_orders.pending.count %></td>
          <td>
            <%= link_to "Edit", "#", class: "btn btn-secondary", style: "padding: 0.25rem 0.5rem; font-size: 0.875rem;" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
