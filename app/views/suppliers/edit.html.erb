<% content_for :page_title, "Edit Supplier" %>

<div class="table-container">
  <div class="table-header">
    <h3 class="table-title">Edit Supplier: <%= @supplier.name %></h3>
    <div style="display: flex; gap: 1rem;">
      <%= link_to "View Supplier", @supplier, class: "btn btn-secondary" %>
      <%= link_to "Back to Suppliers", suppliers_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div style="padding: 2rem;">
    <%= form_with model: @supplier, local: true do |form| %>
      <% if @supplier.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= pluralize(@supplier.errors.count, "error") %> prohibited this supplier from being saved:</strong>
          <ul style="margin-top: 0.5rem;">
            <% @supplier.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid-2" style="gap: 2rem;">
        <div>
          <h4 style="margin-bottom: 1rem;">Supplier Information</h4>

          <div class="form-group">
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, class: "form-input", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :contact_email, "Contact Email", class: "form-label" %>
            <%= form.email_field :contact_email, class: "form-input" %>
          </div>

          <div class="form-group">
            <%= form.label :contact_phone, "Contact Phone", class: "form-label" %>
            <%= form.telephone_field :contact_phone, class: "form-input" %>
          </div>
        </div>

        <div>
          <h4 style="margin-bottom: 1rem;">Business Details</h4>

          <div class="form-group">
            <%= form.label :address, class: "form-label" %>
            <%= form.text_area :address, rows: 3, class: "form-input" %>
          </div>

          <div class="form-group">
            <%= form.label :default_lead_time_days, "Default Lead Time (Days)", class: "form-label" %>
            <%= form.number_field :default_lead_time_days, min: 1, class: "form-input", required: true %>
          </div>

          <div style="margin-top: 1rem; padding: 1rem; background: #f7fafc; border-radius: 0.375rem;">
            <h5 style="margin-bottom: 0.5rem;">Associated Products</h5>
            <p style="color: #4a5568; font-size: 0.875rem;">
              This supplier has <%= @supplier.products.count %> product(s) associated with it.
            </p>
          </div>
        </div>
      </div>

      <div style="margin-top: 2rem; display: flex; gap: 1rem;">
        <%= form.submit "Update Supplier", class: "btn btn-primary" %>
        <%= link_to "Cancel", @supplier, class: "btn btn-secondary" %>
        <% if @supplier.products.empty? %>
          <%= link_to "Delete Supplier", @supplier, method: :delete,
                      confirm: "Are you sure you want to delete this supplier?",
                      class: "btn btn-danger" %>
        <% else %>
          <span class="btn btn-danger" style="opacity: 0.5; cursor: not-allowed;"
                title="Cannot delete supplier with associated products">
            Delete Supplier
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>